{% extends 'back_base.html.twig' %}

{% block content %}
<style>
    .form-container {
        margin-top: 5rem;
    }
    .table-row:hover {
        background-color: #f8f9fa;
    }
    .table-row:hover td {
        color: #007bff;
    }
    .table-row:hover .btn, .form-submit-btn {
        background-color: #007bff; /* Pour que le bouton ait le fond bleu */
        color: #ffffff; /* Texte en blanc pour contraste */
        border-radius: 20px; /* Bordures arrondies pour le style "btn-round" */
        border: none; /* Supprime la bordure par défaut des boutons */
        padding: 10px 20px; /* Ajustement du padding pour correspondre à vos besoins */
        cursor: pointer; /* Change le curseur au survol */
    }
</style>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6 form-container">
                <div class="card mt-3">
                    <div class="card-header text-center">
                   <h1>Edit Agence</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'onsubmit': 'return validateForm(event)'}}) }}
    <div class="form-group">
        {{ form_label(form.nomage, "Name :") }}
        {{ form_widget(form.nomage, {'required': 'required'}) }}
        {{ form_errors(form.nomage) }}
    </div>

    <div class="form-group">
        {{ form_label(form.email, "Email :") }}
        {{ form_widget(form.email, {'required': 'required'}) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="form-group">
        {{ form_label(form.addresse, "Address :") }}
        {{ form_widget(form.addresse, {'required': 'required'}) }}
        {{ form_errors(form.addresse) }}
    </div>

    <div class="form-group">
        {{ form_label(form.tel, "Number :") }}
        {{ form_widget(form.tel, {'required': 'required'}) }}
        {{ form_errors(form.tel) }}
    </div>

    {{ form_widget(form.save, {'attr': {'style': 'background-color: #0056b3;'}}) }}
{{ form_end(form) }}

<script>
    function validateForm(event) {
        var nomageField = document.getElementById("{{ form.nomage.vars.id }}");
        var emailField = document.getElementById("{{ form.email.vars.id }}");
        var addresseField = document.getElementById("{{ form.addresse.vars.id }}");
        var telField = document.getElementById("{{ form.tel.vars.id }}");

        if (nomageField.value.trim() === "") {
            alert("Name is required.");
            nomageField.focus();
            event.preventDefault();
            return false;
        }

        if (emailField.value.trim() === "") {
            alert("Email is required.");
            emailField.focus();
            event.preventDefault();
            return false;
        }

        if (addresseField.value.trim() === "") {
            alert("Address is required.");
            addresseField.focus();
            event.preventDefault();
            return false;
        }

        if (telField.value.trim() === "") {
            alert("Number is required.");
            telField.focus();
            event.preventDefault();
            return false;
        }

        return true;
    }
</script>
		
    </div>
    <!-- End container-fluid-->
    
    </div>
            </div>
        </div>
    </div>
</div>


{% endblock  %}