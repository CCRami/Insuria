{% extends 'front_base.html.twig' %}
{% block main %}
<main>
{% block slider %}

 <section class="breadcrumb__area background-bg pt-180 pb-180 include-bg p-relative fix"
            data-background="assets/img/breadcurmb/breadcurmb.jpg">
            <div class="tp-breadcrmb-circle-one"></div>
            <div class="tp-breadcrmb-circle-two"></div>
            <div class="container">
               <div class="row">
                  <div class="col-xxl-12">
                     <div class="breadcrumb__wrapper z-index-6 d-flex justify-content-between align-items-center">
                        <div class="breadcrumb__content">
                           <h3 class="breadcrumb__title">Blog Details</h3>
                        </div>
                        <div class="breadcrumb__button">
                           <a class="tp-btn-white" href="contact.html">Contact us today<i class="far fa-arrow-right"></i></a>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            </section>
{% endblock %}

<div class="postbox__area pt-120 pb-120">
    <div class="container">
        <div class="row">
            <div class="col-xxl-8 col-xl-8 col-lg-8">
                <div class="postbox__wrapper pr-20">
                    {% for offre in offres %}
                    <article class="postbox__item format-image mb-50 transition-3">
                        <div class="postbox__thumb w-img">
                            <a href="{{ path('display_offref', {'id': offre.id}) }}">
                                <img src="{{ asset('uploads/offres/' ~ offre.offreimg) }}" alt="Offre Image" style="max-width: 200px; max-height: 200px;">
                            </a>
                        </div>
                        <div class="postbox__content">
                            <div class="postbox__meta">
                                
                               
                                <!-- Add other meta information here -->
                            </div>
                            <h3 class="postbox__title">
                                <a href="{{ path('display_offref', {'id': offre.id}) }}">{{ offre.advantage }}</a>
                            </h3>
                            <div class="postbox__text">
                                <p>{{ offre.conditions }}</p>
                            </div>
                            <div class="post__button">
                                <a class="tp-btn" href="{{ path('display_offref', {'id': offre.id}) }}"> READ MORE</a>
                            </div>
                        </div>
                    </article>
                    {% endfor %}
                </div>
            </div>
            <!-- Sidebar content goes here -->
        </div>
    </div>
</div>
</main>
{% endblock %}
