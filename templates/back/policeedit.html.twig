{% extends 'back_base.html.twig' %}

{% block content %}
<style>
    .form-container {
        margin-top: 10rem;
    }
    .table-row:hover {
        background-color: #f8f9fa;
    }
    .table-row:hover td {
        color: #007bff;
    }
    .table-row:hover .btn, .form-submit-btn {
        background-color: #007bff; /* To make the button have a blue background */
        color: #ffffff; /* White text for contrast */
        border-radius: 20px; /* Rounded borders for "btn-round" style */
        border: none; /* Removes the default button border */
        padding: 10px 20px; /* Padding adjustment to match your needs */
        cursor: pointer; /* Changes cursor on hover */
    }
</style>

<div class="content-wrapper" style="margin-left:0px;">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6 form-container">
                <div class="card mt-3">
                    <div class="card-header text-center">
                    <h2>Edit Policy</h2>
                </div>
                <div class="card-body">
                     {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="form-group">
                        {{ form_label(form.police_name, 'Policy Name', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.police_name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.police_name) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.Description_police, 'Policy Description', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.Description_police, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.Description_police) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.sinistre, 'Associated Claim', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.sinistre, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.sinistre) }}
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-round">
                            Save Changes
                        </button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
