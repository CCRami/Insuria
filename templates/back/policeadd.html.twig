{% extends 'back_base.html.twig' %}
{% block content %}

<style>
    .form-container {
        margin-top: 10rem;
    }
    .table-row:hover {
        background-color: #f8f9fa;
    }
    .table-row:hover td {
        color: #007bff;
    }
    .table-row:hover .btn, .form-submit-btn {
        background-color: #007bff;
        color: #ffffff;
        border-radius: 20px;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
    }
</style>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6 form-container">
                <div class="card mt-3">
                    <div class="card-header text-center">
                        <h2>Add A New Policy</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}
                        
                        <div class="form-group">
                            {{ form_label(form.police_name, 'Policy Name') }}
                            {{ form_widget(form.police_name, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.police_name) }}
                        </div>
                        
<div class="form-group">
    {{ form_label(form.Description_police, 'Policy Description') }}
    {{ form_widget(form.Description_police, {'attr': {'class': 'form-control'}}) }}
    {{ form_errors(form.Description_police) }}
</div>
                        
                        <div class="form-group">
                            {{ form_label(form.sinistre, 'Associated Claim') }}
                            {{ form_widget(form.sinistre, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.sinistre) }}
                        </div>
                        
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary btn-round">
                                <i class="fas fa-plus"></i> Save
                            </button>
                        </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}



