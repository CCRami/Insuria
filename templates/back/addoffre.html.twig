{% extends 'back_base.html.twig' %}
{% block content %}
<div class="clearfix"></div>
  
<div class="content-wrapper">
  <div class="container-fluid">

    <!--Start Dashboard Content-->

    <div class="card mt-3">
      <div class="card-content">
        <!-- Symfony Form Start -->
        <div class="row justify-content-center"> {# Centering the content horizontally #}
          <div class="col-lg-8 col-md-10 col-sm-12"> {# Adjust grid column width based on your layout needs #}
            <div class="card">
              <div class="card-body">
                <div class="card-title">Ajouter un offre</div>
                <hr>
                {{ form_start(form, {'attr': {'class': 'form-horizontal', 'id': 'commande_form', 'enctype': 'multipart/form-data'}}) }}
                <div class="form-group">
                  {{ form_label(form.advantage, 'Advantage', {'label_attr': {'class': 'control-label'}}) }}
                  {{ form_widget(form.advantage, {'attr': {'class': 'form-control form-control-rounded', 'placeholder': 'Enter Advantage'}}) }}
                </div>
                <div class="form-group">
                  {{ form_label(form.conditions, 'Conditions', {'label_attr': {'class': 'control-label'}}) }}
                  {{ form_widget(form.conditions, {'attr': {'class': 'form-control form-control-rounded', 'placeholder': 'Enter Conditions'}}) }}
                </div>
                <div class="form-group">
                  {{ form_label(form.duration, 'Duration', {'label_attr': {'class': 'control-label'}}) }}
                  {{ form_widget(form.duration, {'attr': {'class': 'form-control form-control-rounded', 'placeholder': 'Enter Duration'}}) }}
                </div>
                <div class="form-group">
                  {{ form_label(form.discount, 'Discount', {'label_attr': {'class': 'control-label'}}) }}
                  {{ form_widget(form.discount, {'attr': {'class': 'form-control form-control-rounded', 'placeholder': 'Enter Discount'}}) }}
                </div>
                <div class="form-group">
                  {{ form_label(form.categorie, 'categorieOffre', {'label_attr': {'class': 'control-label'}}) }}
                  {{ form_widget(form.categorie, {'attr': {'class': 'form-control form-control-rounded'}}) }}
                </div>
                <div class="form-group">
                  {{ form_label(form.offreimg, 'Image', {'label_attr': {'class': 'control-label'}}) }}
                  {{ form_widget(form.offreimg, {'attr': {'class': 'form-control form-control-rounded', 'accept': 'image/*'}}) }}
                </div>
                {{ form_rest(form) }}
                <div class="form-group py-2">
                  <div class="icheck-material-white">
                    <input type="checkbox" id="user-checkbox2" checked=""/>
                    <label for="user-checkbox2">I Agree Terms & Conditions</label>
                  </div>
                </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-light btn-round px-5"><i class="icon-lock"></i> Ajouter</button>
                </div>
                {{ form_end(form) }}
              </div>
            </div>
          </div>
        </div>
        <!-- Symfony Form End -->
      </div>
    </div>  
      
    <!--End Dashboard Content-->
  
    <!--start overlay-->
    <div class="overlay toggle-menu"></div>
    <!--end overlay-->
  
  </div>
  <!-- End container-fluid-->
    
</div><!--End content-wrapper-->
{% endblock %}
