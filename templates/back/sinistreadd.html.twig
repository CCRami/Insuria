{% extends 'back_base.html.twig' %}

{% block content %}
<style>
    .form-container {
        margin-top: 10rem;
    }
    .table-row:hover {
        background-color: #f8f9fa;
    }
    .table-row:hover td {
        color: #007bff;
    }
    .table-row:hover .btn, .form-submit-btn {
        background-color: #007bff; /* Pour que le bouton ait le fond bleu */
        color: #ffffff; /* Texte en blanc pour contraste */
        border-radius: 20px; /* Bordures arrondies pour le style "btn-round" */
        border: none; /* Supprime la bordure par défaut des boutons */
        padding: 10px 20px; /* Ajustement du padding pour correspondre à vos besoins */
        cursor: pointer; /* Change le curseur au survol */
    }
</style>

<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6 form-container">
                <div class="card mt-3">
                    <div class="card-header text-center">
                        <h2>Ajouter une nouvelle sinistre</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'}}) }}

                        
                         <div class="form-group">
                        {{ form_label(form.sin_name, 'Nom de sinistre') }}
                        {{ form_widget(form.sin_name, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.sin_name) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.description_sin, 'Description de sinistre') }}
                        {{ form_widget(form.description_sin, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.description_sin) }}
                    </div>
                    
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary btn-submit">
                            <i class="icon-plus"></i> Sauvegarder
                        </button>
                    </div>
                        
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
