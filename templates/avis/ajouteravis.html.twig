{% extends 'front_base.html.twig' %}

{% block main %}
<style>
    .form-container {
        margin-top: 10rem;
        margin-bottom: 10rem;
    }
    .table-row:hover {
        background-color: #007bff;
    }
    .table-row:hover td {
        color: #007bff;
    }
    .table-row:hover .btn,
    .form-submit-btn {
        background-color: #007bff;
        color: #ffffff;
        border-radius: 20px;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
    }
    .rating {
        display: inline-block;
        font-size: 0;
    }
    .rating input {
        display: none;
    }
    .rating label {
        position: relative;
        display: inline-block;
        width: 30px;
        height: 30px;
        margin: 0;
        cursor: pointer;
    }
    .rating label:before {
        content: "\2605";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        font-size: 24px;
        line-height: 30px;
        text-align: center;
        color: #ddd;
    }
    .rating input:checked ~ label:before {
        color: #ffc107;
    }
    .rating label:hover:before,
    .rating label:hover ~ label:before {
        color: #ffc107;
    }
</style>

<div class="content-wrapper">
    <div class="container-fluid" style='   background-color: #ddd;'>
        <div class="row justify-content-center">
            <div class="col-md-6 form-container">
                <div class="card mt-3">
                    <div class="card-header text-center">
                        <h1>Add Note</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="form-group">
                            {{ form_label(form.note, "Note:") }}
                            <div class="rating"><input type="radio" id="star1" name="rating" value="1">
                                <label for="star1" title="1 star"></label>
                                 <input type="radio" id="star2" name="rating" value="2">
                                <label for="star2" title="2 stars"></label>
                             
                                <input type="radio" id="star3" name="rating" value="3">
                                <label for="star3" title="3 stars"></label> <input type="radio" id="star4" name="rating" value="4">
                                <label for="star4" title="4 stars"></label>
                                
                                <input type="radio" id="star5" name="rating" value="5">
                                <label for="star5" title="5 stars"></label>
                               
                                
                                
                            </div>
                            {{ form_errors(form.note) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.commentaire, "Comment:") }}
                            {{ form_widget(form.commentaire, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.commentaire) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.avis, "Client:") }}
                            {{ form_widget(form.avis, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.avis) }}
                        </div>
                        {{ form_widget(form.save, {'attr': {'class': 'form-submit-btn'}}) }}
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}