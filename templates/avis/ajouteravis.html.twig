{% block main %}
<main>

<style>
    .espacement-superieur {
        padding-top: 100px; /* Ajustez selon vos besoins pour espacer du haut */
    }
    .contenu-centre {
        display: flex;
        flex-direction: column;
        justify-content: center; /* Centrage vertical */
        min-height: 100vh; /* Hauteur de vue minimale pour prendre toute la hauteur de l'écran */
    }
    .couleur-carte {
        background-color: #f0f0f0; /* Couleur de fond des cartes, ajustez à votre préférence */
    }
    
    .form-container {
        margin-top: 10rem;
        margin-bottom: 10rem;
    }
    .table-row:hover {
        background-color: #007bff;
    }
    .table-row:hover td {
        color: #007bff;
    }
    .table-row:hover .btn,
    .form-submit-btn {
        background-color: #007bff;
        color: #ffffff;
        border-radius: 20px;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
    }
    .rating {
        display: inline-block;
        font-size: 0;
    }
    .rating input {
        display: none;
    }
    .rating label {
        position: relative;
        display: inline-block;
        width: 30px;
        height: 30px;
        margin: 0;
        cursor: pointer;
    }
    .rating label:before {
        content: "\2605";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        font-size: 24px;
        line-height: 30px;
        text-align: center;
        color: #ddd;
    }
    .rating input:checked ~ label:before {
        color: #ffc107;
    }
    .rating label:hover:before,
    .rating label:hover ~ label:before {
        color: #ffc107;
    }

</style>

<div class="contenu-centre">
    <div class="container" >
        {% block service %}
            <div class="tp-service-area  pt-200 pb-200 z-index p-relative" >
                
                <div class="card mt-3">
                    <div class="card-header text-center">
                        <h1>Add Note</h1>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                        <div class="form-group">
                            {{ form_label(form.note, "Note:") }}
                            {{ form_widget(form.note) }}
                            {{ form_errors(form.note) }}
                        </div>
                 <div class="form-group" style="margin-bottom: 22px;">
    {{ form_label(form.commentaire, "Comment:") }}
    {{ form_widget(form.commentaire, {'attr': {'class': 'form-control'}, 'widget': 'textarea'}) }}
    {{ form_errors(form.commentaire) }}
</div>
                        <div class="form-group" >
                            <div class="col-md-3">
         {{ form_label(form.avis, "Client:") }}
      </div>
                            {{ form_widget(form.avis, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.avis) }}
                        </div><div class="col-md-4" style="margin-left: 50%;margin-top:5%;">
                        {{ form_widget(form.save, {'attr': {'class': 'form-submit-btn'}}) }}
                      </div>   {{ form_end(form) }}
                    </div>
                </div>
            </div>
        {% endblock %}
    </div>
</div>
   
{% endblock %}